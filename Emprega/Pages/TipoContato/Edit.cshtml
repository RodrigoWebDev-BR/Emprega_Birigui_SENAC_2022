@page
@model Emprega.Pages.TipoContato.EditModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Tipo de contato</h4>
<hr />
<div class="row mb-3">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TipoContato.Id" />
            <div class="form-group mb-3">
                <label asp-for="TipoContato.Nome" class="control-label mb-3"></label>
                <input asp-for="TipoContato.Nome" class="form-control mb-3" />
                <span asp-validation-for="TipoContato.Nome" class="text-danger mb-3"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Voltar para lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
