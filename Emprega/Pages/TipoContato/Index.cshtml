@page
@model Emprega.Pages.TipoContato.IndexModel

@{
    ViewData["Title"] = "Tipo de contato";
}

<h1>Tipo de contato</h1>

<p>
    <a asp-page="Create">Adicionar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TipoContato[0].Nome) 
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TipoContato) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
