@page
@model Emprega.Pages.Vaga_Beneficio.EditModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Vaga Benefício</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VagaBeneficio.Id" />
            <div class="form-group">
                <label asp-for="VagaBeneficio.IdVaga" class="control-label"></label>
                <select asp-for="VagaBeneficio.IdVaga" class="form-control" asp-items="ViewBag.IdVaga"></select>
                <span asp-validation-for="VagaBeneficio.IdVaga" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VagaBeneficio.IdBeneficio" class="control-label"></label>
                <select asp-for="VagaBeneficio.IdBeneficio" class="form-control" asp-items="ViewBag.IdBeneficio"></select>
                <span asp-validation-for="VagaBeneficio.IdBeneficio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Voltar para Vaga Benefício</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
