@page
@model Emprega.Pages.Inscricao_Status.CreateModel

@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastrar</h1>

<h4>Status de Inscrição</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="InscricaoStatus.Nome" class="control-label"></label>
                <input asp-for="InscricaoStatus.Nome" class="form-control" />
                <span asp-validation-for="InscricaoStatus.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InscricaoStatus.Cor" class="control-label"></label>
                <input asp-for="InscricaoStatus.Cor" class="form-control" />
                <span asp-validation-for="InscricaoStatus.Cor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Voltar para Status de Inscrição</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
