@page
@model Emprega.Pages.Inscricao_vaga.EditModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar vaga</h1>

<h4>Editar Inscricao da Vaga</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InscricaoVaga.Id" />
            <div class="form-group">
                <label asp-for="InscricaoVaga.IdCandidato" class="control-label"></label>
                <select asp-for="InscricaoVaga.IdCandidato" class="form-control" asp-items="ViewBag.IdCandidato"></select>
                <span asp-validation-for="InscricaoVaga.IdCandidato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InscricaoVaga.IdVaga" class="control-label"></label>
                <select asp-for="InscricaoVaga.IdVaga" class="form-control" asp-items="ViewBag.IdVaga"></select>
                <span asp-validation-for="InscricaoVaga.IdVaga" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InscricaoVaga.IdStatus" class="control-label"></label>
                <select asp-for="InscricaoVaga.IdStatus" class="form-control" asp-items="ViewBag.IdStatus"></select>
                <span asp-validation-for="InscricaoVaga.IdStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
